<div class="row">
	<div class="col-md-4">
		<%= image_tag @book.book_img.url(:book_show),class: "book-show"%>
	</div>
	<div class="col-md-8">
	 <div class="book-info"> 
		<h2 class="book-title"><%= @book.title%></h2>
		<h3 class="book-author"><%= @book.author%></h3>
		<!-- <h4>Category: <%= @book.category.name%></h4> -->
		<h2 class="avg-rating">Average Rating</h2>
		<div class="average-review-rating" data-score=<%= @average_review %>></div>
		<span class="number-of-reviews">Based on <%= @book.reviews.count%> reviews </span>
		<p class="book-desc"><%= @book.description%></p>
	  </div>
	</div>
</div>
<br>
<div class="links-btn-group">

<%= link_to "BACK", root_path(@book), class: "btn-custom"%>
<% if user_signed_in? %>
	<% if @book.user_id == current_user.id %>

		<%= link_to "EDIT", edit_book_path(@book), class: "btn-custom"%>
		<%= link_to "DELETE", book_path(@book),method: :delete, data:{ conform: "Are you sure?"},class: "btn-custom" %>

	<% end%>
<% end%>
</div>
<div class="row">
	<div class="col-md-4">
	<div class="reviews">
		<%= render @book.reviews	%>

     	<div>
     		<%= link_to "Add Review", new_book_review_path(@book),class: "btn-custom" %>
     	</div>
     	</div>
	</div>
</div>




  
<script>
	$('.review-rating').raty({
		readOnly: true,
		path: '/assets/',
		score: function() {
			return $(this).attr('data-score');
		}
		
	});
</script>


<script>
	$('.average-review-rating').raty({
		readOnly: true,
		path: '/assets/',
		score: function() {
			return $(this).attr('data-score');
		}
		
	});
</script>





















